{
	"name": "modal-svelte",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && svelte-package",
		"build:package": "svelte-package",
		"build:site": "vite build",
		"lint": "prettier --check src *.js && eslint src *.js && svelte-check --tsconfig ./tsconfig.json",
		"format": "prettier --write src *.js && eslint --fix src *.js"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^1.0.0-next.104",
		"@sveltejs/adapter-static": "1.0.0-next.49",
		"@sveltejs/kit": "1.0.0-next.582",
		"@sveltejs/package": "^1.0.0-next.6",
		"@typescript-eslint/eslint-plugin": "^5.46.0",
		"@typescript-eslint/parser": "^5.46.0",
		"eslint": "^8.29.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.1",
		"prettier-plugin-svelte": "^2.9.0",
		"sass": "^1.56.2",
		"svelte": "^3.54.0",
		"svelte-check": "^2.10.2",
		"svelte-preprocess": "^5.0.0",
		"typescript": "^4.9.4",
		"vite": "^4.0.0"
	},
	"license": "MIT",
	"homepage": "https://modal-svelte.kasper.space",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/probablykasper/modal-svelte.git"
	},
	"bugs": {
		"url": "https://github.com/probablykasper/modal-svelte/issues"
	},
	"author": {
		"name": "Kasper Henningsen",
		"url": "https://kasper.space"
	},
	"keywords": [
		"svelte",
		"modal",
		"popup",
		"dialog",
		"focus",
		"trap"
	],
	"prettier": {
		"useTabs": true,
		"printWidth": 100,
		"semi": false,
		"singleQuote": true,
		"pluginSearchDirs": [
			"."
		]
	}
}
